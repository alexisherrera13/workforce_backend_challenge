<h1>Reset your password</h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form|%>
  <% if form.object.errors.any?%>
    <% form.object.errors.full_messages.each do |msg|%>
      <h3> <%= msg%> </h3>
    <%end%>
  <%end%>
  <%= form.label :password %>
  <%= form.password_field :password, class: "form-control",placeholder: "password"%>
  <br/>
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation, class: "form_control", placeholder: "password"%>
  <br/>
  <%= form.submit "Reset Password"%>
<%end%>