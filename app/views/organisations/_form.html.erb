<%= form_with model:@organisation do |form|%>
  <% if form.object.errors.any?%>
     <% form.object.errors.full_messages.each do |msg|%>
      <h3> <%= msg%> </h3>
     <%end%>
  <%end%>
  <div>
  <%= form.label :name%>
  <br/>
  <%= form.text_field :name, id: :organisation_name%>
  </div>
  <div>
  <%= form.label :hourly_rate%>
  <br/>
  <%= form.number_field :hourly_rate, step: 0.01,  id: :organisation_hourly_rate%>
  </div>
  <%=form.submit%>
<%end%> 